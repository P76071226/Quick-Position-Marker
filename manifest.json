{
  "manifest_version": 3,
  "name": "Quick Position Marker",
  "version": "1.0",
  "description": "Click to mark a position, click again to return",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Mark/Return to Position"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}

